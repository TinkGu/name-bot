{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "removeComments": true,
    "stripInternal": true
  },
  "include": ["src"]
}
